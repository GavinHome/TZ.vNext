{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "types": [
      "webpack-env"
    ],
    //"allowJs": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "dom",
      "es2015.promise",
      "es5",
      "es2017"
    ],
    "noImplicitThis": true
  },
  "awesomeTypescriptLoaderOptions": {
    "silent": true,
    "useBabel": true,
    "babelOptions": {
      "babelrc": false, 
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": {
              "browsers": [
                "> 1%",
                "last 2 versions",
                "ie >= 11"
              ]
            },
            "modules": false
          }
        ]
      ],
    },
    "babelCore": "@babel/core", 
  },
  "exclude": [
    "bin",
    "node_modules",
    "**/*.bak",
    "Examples",
  ]
}